{
  "extends": "stylelint-config-standard",
  "processors": ["@mapbox/stylelint-processor-arbitrary-tags"],
  "rules": {
    "comment-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ]
      }
    ],
    "comment-whitespace-inside": "never",
    "indentation": 2
  }
}
